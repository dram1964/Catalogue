<span>{{ ctrl.data }}</span>



<script src="[% site.url.js %]/angular1.3.11/angular.js"></script>
<script type="text/javascript" src="[% site.url.ng %]/ng_test.js">
</script>

  </div><!-- end ng-controller div -->
</div><!-- end ng-app div -->
